<Window x:Class="HouseholdBudget.DesktopApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
         xmlns:views="clr-namespace:HouseholdBudget.DesktopApp.Views.Controls"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Household Budget"
        Height="720" Width="1280"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource LightBackgroundBrush}"
        WindowStyle="None"
        AllowsTransparency="True"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">

    <Border Background="{StaticResource DarkBackgroundBrush}" CornerRadius="16" Padding="0">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Background="{StaticResource LightBackgroundBrush}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBlock Text="Household Budget"
                            VerticalAlignment="Center"
                            Margin="16 0 0 0"
                            Foreground="{StaticResource SoftWhiteBrush}"
                            FontSize="22"
                            FontWeight="Bold"/>

                <TextBlock Grid.Column="1"
                            Text="{Binding LoggedInUserName}"
                            VerticalAlignment="Center"
                            Foreground="{StaticResource SoftWhiteBrush}"
                            FontSize="14"
                            FontWeight="SemiBold"
                            Margin="10 0"
                            />

                <StackPanel Grid.Column="2"
                            Orientation="Horizontal"
                            VerticalAlignment="Center"
                            Margin="0 0 10 0">
                    <Button Content="↩ Logout"
                            Click="Logout_Click"
                            Style="{StaticResource StyledButton}"
                            FontSize="14"
                            Margin="0 0 10 0"
                            Padding="4,2"
                            Width="90"
                            Height="30"/>

                    <Button Content="✕"
                            Style="{StaticResource CloseButtonStyle}"
                            Click="CloseButton_Click"
                            Width="40"
                            Height="40"/>
                </StackPanel>
            </Grid>

            <Grid Grid.Row="1" Margin="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="250"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0"
                        Background="{StaticResource LightBackgroundBrush}"
                        CornerRadius="8">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Button Grid.Row="0"
                                Content="Transactions"
                                Style="{StaticResource StyledButton}"
                                Margin="10"
                                Height="40"
                                FontSize="16"
                                Click="TransactionsButton_Click"/>

                        <TextBlock Grid.Row="1"
                                   Text="Budgets"
                                   Foreground="{StaticResource SoftWhiteBrush}"
                                   FontSize="16"
                                   FontWeight="Bold"
                                   Margin="10,5,10,0"/>

                        <Border Grid.Row="2"
                                Height="1"
                                Background="{StaticResource SoftWhiteBrush}"
                                Opacity="0.2"
                                Margin="10,3,10,3"/>

                        <ListView Grid.Row="3"
                                  Margin="10, 0"
                                  x:Name="BudgetsListView"
                                  Background="Transparent"
                                  BorderThickness="0"
                                  Foreground="{StaticResource SoftWhiteBrush}"
                                  ItemsSource="{Binding Budgets}"
                                  SelectedItem="{Binding SelectedBudget}">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Name}" Padding="8 5"/>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                        <Grid Grid.Row="4" Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <Button Grid.Column="0"
                                Content="Add"
                                Style="{StaticResource StyledButton}"
                                Height="40"
                                Click="AddBudget_Click"
                                FontSize="16"
                                Margin="0,0,5,0"/>
                                
                        <Button Grid.Column="1"
                                Content="Remove"
                                Style="{StaticResource StyledButton}"
                                Height="40"
                                 FontSize="16"
                                Click="RemoveBudget_Click"
                                Margin="5,0,0,0"/>
                            </Grid>
                        </Grid>
                     </Border>

                <ContentControl Grid.Column="1" Content="{Binding ViewRouter.CurrentView}" />
            </Grid>
        </Grid>
    </Border>
</Window>