<UserControl x:Class="HouseholdBudget.DesktopApp.Views.Controls.BudgetDetailsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HouseholdBudget.DesktopApp.Views.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1000">

    <Border Background="{StaticResource DarkBrush}" Margin="10 0 0 0" CornerRadius="8">
        <ScrollViewer VerticalScrollBarVisibility="Visible" HorizontalScrollBarVisibility="Disabled">
            <ScrollViewer.Resources>
                <Style TargetType="ScrollBar" BasedOn="{StaticResource CustomScrollBar}" />
            </ScrollViewer.Resources>
            <StackPanel Margin="20" Orientation="Vertical">
                <TextBlock Text="{Binding Name}" FontSize="22" FontWeight="Bold" Foreground="{StaticResource PrimaryBrush}" Margin="0 0 0 10" />
                <TextBlock Text="{Binding Description}" FontSize="18" Foreground="{StaticResource SoftWhiteBrush}" Margin="0 0 0 10" />

                <TextBlock Text="Category Plans" FontSize="18" FontWeight="SemiBold" Foreground="{StaticResource PrimaryBrush}" Margin="0 20 0 10"/>

                <StackPanel Orientation="Horizontal" Margin="0 0 0 16">
                    <Button Content="Add"
                            Style="{StaticResource ModernButton}"
                            Command="{Binding AddBudgetCategoryCommand}"
                            Grid.Column="0"
                            Margin="4,0,2,0"
                            MinWidth="75"
                            Padding="8,12"/>
                    <Button Content="Edit"
                            Style="{StaticResource ModernButton}"
                            Command="{Binding EditBudgetCategoryCommand}"
                            Grid.Column="0"
                            Margin="4,0,2,0"
                            MinWidth="75"
                            Padding="8,12"/>
                    <Button Content="Delete"
                            Style="{StaticResource ModernButton}"
                            Command="{Binding DeleteBudgetCategoryCommand}"
                            Background="{StaticResource ErrorBrush}"
                            Grid.Column="0"
                            Margin="4,0,2,0"
                            MinWidth="75"
                            Padding="8,12"/>

                </StackPanel>

                <ItemsControl ItemsSource="{Binding CategoryPlans}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="#1E1E2F" Margin="0 0 0 10" Padding="10" CornerRadius="6">
                                <StackPanel>
                                    <TextBlock Text="{Binding CategoryName}" FontSize="16" FontWeight="Bold" Foreground="White"/>

                                    <!-- Income -->
                                    <TextBlock Text="Income" Foreground="#88FF88" Margin="0 10 0 0"/>
                                    <ProgressBar Minimum="0" Maximum="1" 
                                                Value="{Binding IncomeProgress, Mode=OneWay}" 
                                                Height="16" 
                                                Foreground="{Binding IncomeProgress, Converter={StaticResource ProgressColorConverter}, Mode=OneWay}" />

                                    <TextBlock Text="{Binding IncomeExecuted, StringFormat='{}{0:C}'}" Foreground="White"/>

                                    <!-- Expense -->
                                    <TextBlock Text="Expenses" Foreground="#FF8888" Margin="0 10 0 0"/>
                                    <ProgressBar Minimum="0" Maximum="1" 
                                                Value="{Binding ExpenseProgress, Mode=OneWay}" 
                                                Height="16" 
                                                Foreground="{Binding ExpenseProgress, Converter={StaticResource ProgressColorConverter}, Mode=OneWay}" />

                                    <TextBlock Text="{Binding ExpenseExecuted, StringFormat='{}{0:C}'}" Foreground="White"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </ScrollViewer>
    </Border>
</UserControl>
