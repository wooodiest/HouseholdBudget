<UserControl x:Class="HouseholdBudget.DesktopApp.Views.Controls.AnalysisView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:HouseholdBudget.DesktopApp.Views.Controls"
             xmlns:vm="clr-namespace:HouseholdBudget.DesktopApp.ViewModels"
             xmlns:sp="clr-namespace:ScottPlot.WPF;assembly=ScottPlot.WPF"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="1000">

    <Border Background="{StaticResource DarkBrush}" Margin="10 0 0 0" CornerRadius="8">
        <ScrollViewer VerticalScrollBarVisibility="Visible" HorizontalScrollBarVisibility="Disabled">
            <ScrollViewer.Resources>
                <Style TargetType="ScrollBar" BasedOn="{StaticResource CustomScrollBar}" />
            </ScrollViewer.Resources>
            <StackPanel Margin="20" Orientation="Vertical">

            <!-- Monthly Filters -->
            <TextBlock Text="Monthly Summary" FontSize="20" FontWeight="Bold" Foreground="White" Margin="0 0 0 10"/>
            <StackPanel Orientation="Horizontal" Margin="0 0 10 10">
                <TextBlock Text="Month:" Foreground="White" Margin="0 0 5 0"/>
                <ComboBox Width="120" ItemsSource="{Binding Months}" SelectedItem="{Binding SelectedMonth}" />
                <TextBlock Text="Year:" Foreground="White" Margin="10 0 5 0"/>
                <ComboBox Width="80" ItemsSource="{Binding Years}" SelectedItem="{Binding SelectedYear}" />
                <Button Content="Refresh" Command="{Binding RefreshCommand}" Margin="20 0 0 0"/>
            </StackPanel>

            <!-- Monthly Charts -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*" />
                    <ColumnDefinition Width="2*" />
                </Grid.ColumnDefinitions>

                <sp:WpfPlot x:Name="TrendPlot" Grid.Column="0" Margin="0 0 10 0" Height="300"/>
                    <Border Grid.Column="1"
                            Background="#1E1E2F"
                            BorderBrush="#444466"
                            BorderThickness="1"
                            CornerRadius="6"
                            Padding="5"
                            Margin="0">
                        <sp:WpfPlot x:Name="PiePlot" Height="290"/>
                    </Border>
                
            </Grid>

            <!-- Custom Range -->
            <TextBlock Text="Custom Date Range" FontSize="20" FontWeight="Bold" Foreground="White" Margin="20 20 0 10"/>
            <StackPanel Orientation="Horizontal" Margin="0 0 10 10">
                <TextBlock Text="From:" Foreground="White" Margin="0 0 5 0"/>
                <DatePicker SelectedDate="{Binding CustomStartDate}" Width="150"/>
                <TextBlock Text="To:" Foreground="White" Margin="10 0 5 0"/>
                <DatePicker SelectedDate="{Binding CustomEndDate}" Width="150"/>
                <Button Content="Apply" Command="{Binding ApplyCustomDateRangeCommand}" Margin="20 0 0 0"/>
            </StackPanel>

            <!-- Custom Chart -->
            <sp:WpfPlot x:Name="CustomTrendPlot" Height="300"/>

        </StackPanel>
    </ScrollViewer>
    </Border>
</UserControl>
