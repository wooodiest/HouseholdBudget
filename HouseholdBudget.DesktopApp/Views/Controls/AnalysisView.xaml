<UserControl x:Class="HouseholdBudget.DesktopApp.Views.Controls.AnalysisView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:HouseholdBudget.DesktopApp.Views.Controls"
             xmlns:vm="clr-namespace:HouseholdBudget.DesktopApp.ViewModels"
             xmlns:sp="clr-namespace:ScottPlot.WPF;assembly=ScottPlot.WPF"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="1000">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Górny pasek -->
        <StackPanel Orientation="Horizontal" Margin="0 0 0 20">
            <TextBlock Text="Month:" VerticalAlignment="Center" Margin="0 0 8 0" />
            <ComboBox Width="120" SelectedItem="{Binding SelectedMonth}" ItemsSource="{Binding Months}" />
            <TextBlock Text="Year:" VerticalAlignment="Center" Margin="16 0 8 0" />
            <ComboBox Width="80" SelectedItem="{Binding SelectedYear}" ItemsSource="{Binding Years}" />
            <Button Content="Refresh" Command="{Binding RefreshCommand}" Margin="20 0 0 0" />
        </StackPanel>

        <!-- Główna siatka -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*" />
                <ColumnDefinition Width="2*" />
            </Grid.ColumnDefinitions>

            <!-- Trend dzienny -->
            <Border Grid.Column="0" CornerRadius="12" Background="#222" Padding="10" Margin="0 0 10 0">
                <sp:WpfPlot x:Name="TrendPlot" />
            </Border>

            <!-- Kategorie -->
            <Border Grid.Column="1" CornerRadius="12" Background="#222" Padding="10">
                <sp:WpfPlot x:Name="PiePlot" />
            </Border>
        </Grid>
    </Grid>

</UserControl>
