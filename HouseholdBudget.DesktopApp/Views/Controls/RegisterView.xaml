<UserControl x:Class="HouseholdBudget.DesktopApp.Views.Controls.RegisterView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300"
             MaxHeight="450">

    <ScrollViewer VerticalScrollBarVisibility="Visible" HorizontalScrollBarVisibility="Disabled">
        <ScrollViewer.Resources>
            <Style TargetType="ScrollBar" BasedOn="{StaticResource CustomScrollBar}" />
        </ScrollViewer.Resources>
        <StackPanel Margin="27 0 10 0">
            <TextBlock Text="Full Name"
                       FontSize="16"
                       Foreground="{StaticResource SoftWhiteBrush}"
                       Margin="0 5 0 0"/>
            <TextBox Style="{StaticResource StyledTextBox}"
                     Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" />

            <TextBlock Text="Email"
                       FontSize="16"
                       Foreground="{StaticResource SoftWhiteBrush}"
                       Margin="0 10 0 0"/>
            <TextBox Style="{StaticResource StyledTextBox}"
                     Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" />

            <TextBlock Text="Password"
                       FontSize="16"
                       Foreground="{StaticResource SoftWhiteBrush}"
                       Margin="0 10 0 0"/>
            <PasswordBox x:Name="PasswordBox"
                         Style="{StaticResource StyledPasswordBox}" />

            <TextBlock Text="Currency"
                       FontSize="16"
                       Foreground="{StaticResource SoftWhiteBrush}"
                       Margin="0 10 0 0" />

            <ComboBox
                ItemsSource="{Binding SupportedCurrencies}"
                SelectedItem="{Binding SelectedCurrency, Mode=TwoWay}"
                Style="{StaticResource ModernComboBox}">

                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Code}" />
                    </DataTemplate>
                </ComboBox.ItemTemplate>

                <ComboBox.Template>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <ToggleButton Name="ToggleButton"
                              IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                              ClickMode="Press"
                              Background="{TemplateBinding Background}"
                              BorderBrush="{TemplateBinding BorderBrush}"
                              Foreground="{StaticResource SoftWhiteBrush}"
                              FontSize="16"
                              BorderThickness="{TemplateBinding BorderThickness}">
                                <Grid>
                                    <ContentPresenter Margin="4,2,25,2"
                                          VerticalAlignment="Center"
                                          HorizontalAlignment="Stretch"
                                          TextBlock.TextAlignment="Left"
                                          Content="{TemplateBinding SelectionBoxItem}"
                                          ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"/>
                                    <Path HorizontalAlignment="Right"
                                          Margin="0,0,6,0"
                                          VerticalAlignment="Center"
                                          Data="M 0 0 L 4 4 L 8 0 Z"
                                          Fill="{TemplateBinding Foreground}" />
                                </Grid>
                            </ToggleButton>
                            <Popup Name="Popup"
                                   Placement="Bottom"
                                   IsOpen="{TemplateBinding IsDropDownOpen}"
                                   AllowsTransparency="True"
                                   Focusable="False"
                                   PopupAnimation="Slide"
                                   StaysOpen="False">
                                <Grid Background="{TemplateBinding Background}"
                                      Width="{Binding ActualWidth, RelativeSource={RelativeSource TemplatedParent}}">
                                    <ScrollViewer>
                                        <ItemsPresenter />
                                    </ScrollViewer>
                                </Grid>
                            </Popup>
 
                        </Grid>
                    </ControlTemplate>
                </ComboBox.Template>
            </ComboBox>

            <TextBlock Text="{Binding ErrorMessage}"
                       Foreground="Red"
                       Margin="0 5 0 0"
                       TextWrapping="Wrap"/>

            <Button Content="Register"
                    HorizontalAlignment="Stretch"
                    Padding="20 10"
                    FontSize="16"
                    Margin="5 20 5 10"
                    Style="{StaticResource ModernButton}"
                    Click="Register_Click"/>
        </StackPanel>
    </ScrollViewer>
</UserControl>
